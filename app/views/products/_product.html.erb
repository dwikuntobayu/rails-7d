<!-- halaman ini dipakai oleh kode : render @products -->
<!-- yang otomatis akan me looping data -->
<tr>
  <td><%= product.id %></td>
  <td><%= product.nama %></td>
  <td><%= product.quantity %></td>
  <td><%= product.price %></td>
  <td><%= link_to(image_tag(product.photo.preview.url), product_path(product.id), remote: true) %></td>
  <td> <%= link_to "Show", product_path(product.id) %> &nbsp; | &nbsp;
  <%= link_to "Edit", edit_product_path(product.id) %> &nbsp; | &nbsp;
  <%= link_to "Delete", product_path(product.id), method: "DELETE", data: {confirm: 'Delete this product ? '} %> </td>
</tr>